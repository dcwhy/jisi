}

.introduce_text{
  margin: 10px auto;
  padding: 20px;
  font-size: 14px;
  color: #666666;
  line-height: 24px;
  letter-spacing: 1px;
}

.notice>image{
  width: 20px;
  height: 18px;
  vertical-align: -3px;
  margin-left: 10px;
}
.notice{
  margin-top: 20px;
}

.title_box{
  text-align: center;
  padding-top: 30px;
}

.more_list{
  margin-top: 30px;
  width: 100%;
  clear: both;
}

.more_list>view{
  float: left;
  text-align: center;
  margin: 0 15px;
  color: #45A2A4;
}

.list_box{
  margin: 80px auto;
  width: 90%;
  white-space: nowrap;
  overflow-x: scroll;
  overflow-y: hidden;
  border-radius: 20px;
}

.list_box>view{
  width: 1000px;
}

.list_box>view>view{
  white-space: nowrap;
  float: left;
  margin: 0 5px;
}

.list_box>view>view:last-child{
  margin-right: 10px;
}

.list_img{
  width: 300px;
  height: 180px;
  border-radius: 20px;
}

.wei_font{
  color: #999999;
  font-size: 14px;
  line-height: 26px;
}

.recommend_box{
  width: 90%;
  margin: 0 auto;
  margin-top: 30px;
  padding-bottom: 30px;
}

.recommend_list{
  height: 110px;
  border-radius: 10px;
  opacity: 0.68;
  background: #F7F7F7;
  margin: 10px 0;
}

.recommend_list>image{
  height: 80px;
  width: 80px;
  border-radius: 4px;
  vertical-align: -80px;
  margin-left: 10px;
}

.text_rec_box{
  float: right;
  margin-top: 12px;
  width:calc(100% - 100px); 
}

.text_rec{
  color: #333333;
}

.rec_time{
  float: right;
  border-radius: 2px;
  background: #FFECE3;
  margin-right: 10px;
}

.text_rec_box>view{
  font-size: 12px;
}

