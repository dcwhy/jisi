.introduce_box{
  background-image: url(https://shitu-query-bj.bj.bcebos.com/2021-01-05/18/38370937bd0cbee2?authorization=bce-auth-v1%2F7e22d8caf5af46cc9310f1e3021709f3%2F2021-01-05T10%3A12%3A58Z%2F300%2Fhost%2F8c4169e9e6803198c5a142cad2ace80c2852ebb0fd6013260c17a8cc8646b2d2);
